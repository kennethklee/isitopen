<header id="title">
  	<h1>Is It Open?</h1>
</header>

<section id="searchbar">
  	<input id="search" placeholder="Where you going?" autofocus>
  	<span class="help-block">Example: <%= position.attr('latitude') && position.attr('longitude') ? 'Taco Bell' : 'KFC near Toronto, Canada' %></span>
</section>

