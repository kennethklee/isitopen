<section id="places">
	<ul>
        <% for( var i = 0; i < 2 && i < places.attr('length'); i++ ) { %>
          	<li>
                <h2><%= places[i].attr('name') %></h2>
                <p><a target="_blank" href="https://maps.google.ca/maps?q=<%= places[i].attr('name') %>&ll=<%= places[i].attr('lat') %>,<%= places[i].attr('lng') %>"><%= places[i].attr('address') %></a></p>
        	</li>
        <% } %>
    </ul>
</section>